<%= link_to restaurant_path(r["name"].gsub(/[^0-9A-Za-z]/, ''), r["objectId"]) do %>
<div class="restaurant row">
	<div class="col-sm-3 col-xs-4">
		<%= image_tag r["yelp_image_url"], class: "img-rounded" %>
	</div>
	<div class="col-sm-9 col-xs-8">
			<h4><%= r["name"] %></h4>				
			<span class="rating"><%= r["rating"] %></span>/5 in <%= r["review_count"] %> reviews</h5><br />
			<div class="row">
				<div class="col-sm-5">
					<span class="text-warning"><%= r["display_yelp_categories"] %></span>
				</div>
				<div class="col-sm-7">
					<i class="fa fa-map-marker"></i> <%= r["short_address"] %>
				</div>
			</div>
	</div>
</div>
<% end %>